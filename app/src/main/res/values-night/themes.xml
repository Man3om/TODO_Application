<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TODOApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_blue</item>
        <!--primary background color.-->
        <item name="android:colorBackground">@color/primary_bg</item>
        <!--primary text color.-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--primary color.-->
        <item name="colorPrimary"> @color/light_blue</item>
    </style>

    <style name="TODOApp.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetAddTask">
        <item name="android:background">@color/DarkModePrimary</item>
    </style>

</resources>